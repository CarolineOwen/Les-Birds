@page
@model Les_Birds.Areas.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
    //Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Bird</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bird.Nom" class="control-label"></label>
                <input asp-for="Bird.Nom" class="form-control" />
                <span asp-validation-for="Bird.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bird.Description" class="control-label"></label>
                <input asp-for="Bird.Description" class="form-control" />
                <span asp-validation-for="Bird.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bird.Image.File" class="control-label"></label>
                <input type="file" asp-for="Bird.Image.File" class="form-control" />
                <span asp-validation-for="Bird.Image.File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bird.Nombre" class="control-label"></label>
                <input asp-for="Bird.Nombre" class="form-control" />
                <span asp-validation-for="Bird.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

